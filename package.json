{
  "name": "rms-backend",
  "private": true,
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "lint": "oxfmt . && oxlint . --fix --type-aware --type-check",
    "typecheck": "bunx tsc --noEmit",
    "db:reset": "tsx --env-file=.env ./src/shared/db/scripts/reset-db.ts",
    "db:push": "tsx --env-file=.env node_modules/.bin/drizzle-kit push --config drizzle.config.ts",
    "db:generate": "tsx --env-file=.env node_modules/.bin/drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "tsx --env-file=.env node_modules/.bin/drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "tsx --env-file=.env node_modules/.bin/drizzle-kit studio --config drizzle.config.ts",
    "test": "NODE_ENV=test vitest run --printConsoleTrace=true --silent=false"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^1.0.0-beta.9-e89174b",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.9",
    "http-status-toolkit": "^2.0.0",
    "nodemailer": "^8.0.1",
    "pg": "^8.18.0",
    "pg-error-enum": "^2.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^1.0.0-beta.9-e89174b",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.47.0",
    "oxlint-tsgolint": "^0.13.0",
    "tsx": "^4.21.0",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
