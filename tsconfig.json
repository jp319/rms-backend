{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "tests/*": ["./tests/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
